<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Awesome Game" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="26dp"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:id="@+id/newGameBtn"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_list"
        android:id="@+id/scoreBtn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newGameBtn"
        android:layout_alignStart="@+id/newGameBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:id="@+id/aboutBtn"
        android:layout_below="@+id/scoreBtn"
        android:layout_alignLeft="@+id/scoreBtn"
        android:layout_alignStart="@+id/scoreBtn"
        android:layout_marginTop="72dp"
        android:layout_alignRight="@+id/scoreBtn"
        android:layout_alignEnd="@+id/scoreBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_exit"
        android:id="@+id/exitBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/aboutBtn"
        android:layout_alignStart="@+id/aboutBtn"
        android:layout_alignRight="@+id/aboutBtn"
        android:layout_alignEnd="@+id/aboutBtn" />

</RelativeLayout>
